<table>
  <tehad>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </tehad>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book.user) do %>
          <%= image_tag book.user.get_profile_image(90, 90) %>
          <% end %>
        </td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
        <td><%= "コメント数：#{book.book_comments.count}" %></td>
        <td><%= render "favorites/favorite", book: book %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  
